{% extends "MachigaiAdminBundle::base.html.twig" %}

{% block contents -%}
    <h1>お知らせ一覧</h1>
    {% include 'MachigaiAdminBundle:Default:pager.parts.html.twig' %}

    <table class="records_list">
        <thead>
            <tr>
                <th>ID</th>
                <th>title</th>
                <th>description</th>
                <th>started_at</th>
                <th>ended_at</th>
                <th>created_at</th>
                <th>updated_at</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('news_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.startedAt | date("Y/m/d H:i:s") }}</td>
                <td>{{ entity.endedAt | date("Y/m/d H:i:s")}}</td>
                <td>{{ entity.createdAt | date("Y/m/d H:i:s") }}</td>
                <td>{{ entity.updatedAt | date("Y/m/d H:i:s") }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('news_show', { 'id': entity.id }) }}">詳細</a>
                    </li>
                    <li>
                        <a href="{{ path('news_edit', { 'id': entity.id }) }}">編集</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% include 'MachigaiAdminBundle:Default:pager.parts.html.twig' %}
        <ul>
        <li>
            <a href="{{ path('news_new') }}">
                新規作成
            </a>
        </li>
    </ul>
    {% endblock %}
