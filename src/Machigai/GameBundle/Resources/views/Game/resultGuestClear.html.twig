<script>

	function getCurrentDuration(){
		return {{clearTime}};
	}
	function padding(num,char,n){
		return (char+(num)).slice(-n); 
	}
    function getMinuteString(){
		var time =getCurrentDuration();
		var target = Math.floor( (time / 1000) / 60 );
		return padding( target, "0", 2 );
	}
    function getSecondString(){
		var time = getCurrentDuration();
		var target = Math.floor((time / 1000) % 60);
		return padding( target, "0", 2 );
	}
    function getMillisecondString(){
		var time = getCurrentDuration();
		var target = Math.floor(time % 1000);
		return padding( target, "0", 2 );
    }
    function clearTimeString(){
		var mm = getMinuteString();
		var ss = getSecondString();
		var ms = getMillisecondString();//.slice(2);
		var colon = "c";
		return (mm + colon + ss + colon + ms);
    }

window.onload = function(){		
	$('#clearTime').html(clearTimeString());

	var numb = $('#clearTime').text();
	$('#clearTime').empty();
	var numarr = numb.split("");
	for ( i = 0; i < numarr.length; i++){
