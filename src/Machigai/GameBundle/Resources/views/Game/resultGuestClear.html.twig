		}else if(numarr[i] == 5){
			$('#clearTime').append("<img src='{{asset('/bundles/machigaigame/images/parts/result_number_5.png')}}' />");
		}else if(numarr[i] == 6){
			$('#clearTime').append("<img src='{{asset('/bundles/machigaigame/images/parts/result_number_6.png')}}' />");
		}else if(numarr[i] == 7){
			$('#clearTime').append("<img src='{{asset('/bundles/machigaigame/images/parts/result_number_7.png')}}' />");
		}else if(numarr[i] == 8){
			$('#clearTime').append("<img src='{{asset('/bundles/machigaigame/images/parts/result_number_8.png')}}' />");
		}else if(numarr[i] == 9){
			$('#clearTime').append("<img src='{{asset('/bundles/machigaigame/images/parts/result_number_9.png')}}' />");
		}else if(numarr[i] == 0){
			$('#clearTime').append("<img src='{{asset('/bundles/machigaigame/images/parts/result_number_0.png')}}' />");
		}else if(numarr[i] == "c"){
			$('#clearTime').append("<img src='{{asset('/bundles/machigaigame/images/parts/result_number_coron.png')}}' />");
		}
	}
}
