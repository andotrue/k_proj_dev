<div style="font-size:0.8em;">
<ul class="panel" style="padding-top:0.8%;clear:right">
{% for item in items %}
{% if item.category.categoryCode == 2 %}
  <li class="item1" style="display:block; text-align:left;padding-left:1%; border-bottom: 1px solid rgb(253,138,55)">
    <img src="{{ asset('/bundles/machigaigame/images/stamp/')}}{{item.getItemPath}}_thum.png" style="width:25%;"/>

    <div style="display:inline-block;width:45%;padding-left:1%;vertical-align:top;">
    	<p style="text-align:left;">
        <span class="title">
          <p style="font-size:1.2em;white-space:nowrap; ">
            {{item.getName}}
          </p>
        </span>
        <div style="font-size:0.8em">
        	<span class="description">{{item.getDescription}}</br></span>
          <span class="updated_at" style="white-space:nowrap; ">{{item.getCreatedAt|date('Y/m/d')}} UP!</span>
        </div>
    	</p>
    </div>

    <div style="display:inline-block;width:25%;">
      <div align="center">
        {% if date(item.getCreatedAt) > date('-7days') %}
          <img src="{{ asset('/bundles/machigaigame/images/parts/shop_newicon.png')  }}" /><br />
        {% endif %}
    	  <p style="font-size:1.3em">{{item.getConsumePoint}}pt</p><br />
        <span class="detail">
          {% if item.getId in purchasedItems %}
            <a href="{{ path('confirm',{"id":item.getId}) }}">
              <img id="shopredl{{item.getId}}" src="{{ asset('/bundles/machigaigame/images/parts/button_shopredl_off.png') }}" width="100%" onclick="changeImage(this.id);"/>
            </a>
          {% else %}
            <a href="{{ path('ShopDownload',{"id":item.getId}) }}"><img id="shopbuy{{item.getId}}" src="{{ asset('/bundles/machigaigame/images/parts/button_contentdetail_buy_off.png') }}" width="100%" onclick="changeImage(this.id);"/></a>
          {% endif %}
        </span>
      </div>
    </div>

   </li>
{% endif %}
{% endfor %}
</ul>
</div>