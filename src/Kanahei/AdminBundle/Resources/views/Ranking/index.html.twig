{% extends "KanaheiAdminBundle::base.html.twig" %}

{% block contents -%}
    <h1>ランキング一覧</h1>
    {% include 'KanaheiAdminBundle:Default:pager.parts.html.twig' %}

    <table class="table table-striped table-bordered table-hover compact">
        <thead>
            <tr>
                <th>ID</th>
                <th>ユーザID</th>
                <th>年</th>
                <th>月</th>
                <th>レベル</th>
                <th>ランク</th>
                <th>クリアタイム</th>
                <th>ボーナスポイント</th>
<!--                
				<th>Createdat</th>
                <th>Updatedat</th>
-->                
				<th>アクション</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ranking_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.user.id }}</td>
                <td>{{ entity.year }}</td>
                <td>{{ entity.month }}</td>
                <td>{{ entity.level }}</td>
                <td>{{ entity.rank }}</td>
                <td>{{ entity.clearTime }}</td>
                <td>{{ entity.bonusPoint }}</td>
<!--                
				<td>{{ entity.createdAt | date("Y/m/d H:i:s") }}</td>
                <td>{{ entity.updatedAt | date("Y/m/d H:i:s") }}</td>
-->                
				<td>
					<a href="{{ path('ranking_show', { 'id': entity.id }) }}">詳細</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% include 'KanaheiAdminBundle:Default:pager.parts.html.twig' %}

	<input class="btn btn-primary" type="button" onclick="location.href='{{ path('ranking_new') }}'" value="新規作成">

    {% endblock %}
