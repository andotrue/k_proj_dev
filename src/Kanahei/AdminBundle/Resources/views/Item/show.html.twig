{% extends "KanaheiAdminBundle::base.html.twig" %}

{% block contents -%}
    <h1>アイテム</h1>
	<a href="{{ path('item') }}">アイテム一覧に戻る</a>｜<a href="{{ path('item_edit', { 'id': entity.id }) }}">編集</a>

    <table class="table table-striped table-bordered table-hover compact">
        <tbody>
            <tr>
                <th width="20%">ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>アイテム番号</th>
                <td>{{ entity.itemCode }}</td>
            </tr>
            <tr>
                <th>カテゴリコード</th>
                <td>{{ entity.categoryCode }}</td>
            </tr>
            <tr>
                <th>アイテム名</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>ファイル名</th>
                <td>{{ entity.itemPath }}</td>
            </tr>
            <tr>
                <th>消費ポイント</th>
                <td>{{ entity.consumePoint }}</td>
            </tr>
            <tr>
                <th>説明</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>人気ランク</th>
                <td>{{ entity.popularityRank }}</td>
            </tr>
            <tr>
                <th>配布開始日時</th>
                <td>{{ entity.distributedFrom | date("Y/m/d H:i:s") }}</td>
            </tr>
            <tr>
                <th>配布終了日時</th>
                <td>{{ entity.distributedTo | date("Y/m/d H:i:s") }}</td>
            </tr>
            <tr>
                <th>作成日時</th>
                <td>{{ entity.createdAt | date("Y/m/d H:i:s") }}</td>
            </tr>
            <tr>
                <th>更新日時</th>
                <td>{{ entity.updatedAt | date("Y/m/d H:i:s") }}</td>
            </tr>
            <tr>
                <th>グループコード</th>
                <td>{{ entity.groupCode }}</td>
            </tr>
            <tr>
                <th>プラットフォームコード</th>
                <td>{{ entity.platformCode }}</td>
            </tr>
            
        </tbody>
    </table>

	{{ form(delete_form) }}
	
{% endblock %}
