{% extends "KanaheiAdminBundle::base.html.twig" %}

{% block contents -%}
    <h1>問題一覧</h1>

    {% include 'KanaheiAdminBundle:Default:pager.parts.html.twig' %}
    <table class="table table-striped table-bordered table-hover compact">
        <thead>
            <tr>
                <th>ID</th>
                <th>問題番号<br />（表示）</th>
                <th>レベル</th>
                <th>問題<br />タイトル</th>
                <th>失敗可能<br />回数</th>
                <th>タイム<br />リミット</th>
                <th>クリア<br />ポイント</th>
                <th>ボーナス<br />ポイント</th>
                <th>配布開始<br />日時</th>
                <th>配布終了<br />日時</th>
                <th>削除済み<br />フラグ</th>
                <th>著作権<br />URL</th>
                <th>フォルダ<br />番号</th>
                <th>アクション</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('question_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.questionNumber }}</td>
                <td>{{ entity.level }}</td>
                <td>{{ entity.questionTitle }}</td>
                <td>{{ entity.failLimit }}</td>
                <td>{{ entity.timeLimit }}</td>
                <td>{{ entity.clearPoint }}</td>
                <td>{{ entity.bonusPoint }}</td>
                <td>{{ entity.distributedFrom | date("Y/m/d H:i:s")  }}</td>
                <td>{{ entity.distributedTo | date("Y/m/d H:i:s") }}</td>
                <td>{{ entity.isDelete }}</td>
                <td>{{ entity.copyrightUrl }}</td>
                <td>{{ entity.qcode }}</td>
                <td>
					<a href="{{ path('question_show', { 'id': entity.id }) }}">詳細</a>｜
                    <a href="{{ path('question_edit', { 'id': entity.id }) }}">編集</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% include 'KanaheiAdminBundle:Default:pager.parts.html.twig' %}

    <input class="btn btn-primary" type="button" onclick="location.href='{{ path('question_new') }}'" value="新規作成">


    {% endblock %}
